@model CadastroWebVendedores_Mvc.Models.Vendedor

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir o vendedor <strong>@Model.Nome</strong>?</h3>

<div>   
    <h4>Detalhes do Vendedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.DataNascimento)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.DataNascimento)</dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.SalarioBase)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.SalarioBase)</dd>
    </dl>
</div>

<!-- Botao para confirmar a exlusao-->
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
