@model IEnumerable<CadastroWebVendedores_Mvc.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedor";
    <!-- Titilo da página -->
}

<h1>@ViewData["Title"]</h1> <!-- Reaproveitamento do titulo-->

<!-- Link para acao Criar -->
<p>
    <a asp-action="Create" class="btn btn-Default">Criar Novo Vendedor</a>

<!-- Criar layout para mostrar lista de vendedores-->
<table class="table table-striped table-hover">
    <thead>
        <!-- Cabeçalho da tabela -->
        <tr class="succes">
            <th> @Html.DisplayNameFor(Model => Model.Nome)</th>
            <th> @Html.DisplayNameFor(Model => Model.Email)</th>
            <th> @Html.DisplayNameFor(Model => Model.DataNascimento)</th>
            <th> @Html.DisplayNameFor(Model => Model.SalarioBase)</th>
        </tr>

    </thead>
    <tbody>
        <!-- Corpo da tabela -->
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                <td>@Html.DisplayFor(modelItem => item.SalarioBase)</td>

                <!--Incluindo botões de ação-->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

